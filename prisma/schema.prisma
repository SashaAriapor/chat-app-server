generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  firstname    String
  lastname     String?
  email        String    @unique
  updateAt     DateTime  @updatedAt
  refreshToken String    @default("")
  createAt     DateTime  @default(now())
  hash         String
  avatar       String    @default("default/default-profile.png")
  bio          String    @default("")
  socketId     String    @default(uuid())
  contact      Contact[]
  messages     Message[]
}

model Contact {
  id          String  @id @default(uuid())
  authorId    String
  firstname   String
  lastname    String?
  contactMail String
  author      User    @relation(fields: [authorId], references: [id])
}

model Message {
  id         String   @id @default(uuid())
  authorMail String
  author     User     @relation(fields: [authorMail], references: [id])
  to         String
  createAt   DateTime @default(now())
  contact    String
}
